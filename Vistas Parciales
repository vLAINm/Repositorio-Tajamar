            <th>Precio</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Coche car in Model)
        {
            <tr>
                <td>@car.Marca</td>
                <td>@car.Modelo</td>
                <td>@car.Motor</td>
                <td>@car.Precio â‚¬</td>
            </tr>
        }
    </tbody>
</table>

